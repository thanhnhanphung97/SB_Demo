@model IEnumerable<Demo.Models.DTO.PartnersDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="font-size:30px; text-align:center; height: 30px; padding: 5px; margin: 20px;"><strong>Partners List</strong></div>

<p>
    <div style="font-size:17px;">@Html.ActionLink("Create New", "Create")</div>
</p>
<table class="table">
    <tr>
        <th width="150">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th width="500">
            @Html.DisplayNameFor(model => model.Describe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Background)
        </th>
        <th width="150">#</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src=@item.Img height="125" width="175" style="border: 1px solid;" />
        </td>
        <td>
            @Html.Raw(item.Describe)
        </td>
        <td>
            <img src=@item.Background height="125" width="175" style="border: 1px solid;" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
